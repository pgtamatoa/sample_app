<% provide(:title, "index") %> 

<h1>Articles</h1>

<div class="clearfix">
  <% if @posts.empty? %>
    <p>There aint no post.</p>
  <% else %>
    <div class="posts">
      <% @posts.each do |post| %>
        <div class="post"> 
          <h3><%= link_to post.title, post_path(post.id) %></h3>
          <p><%= post.content %></p>
          <span class="bg-info"><%= pluralize(post.comments.count, "commentaire")%></span>
        </div>
      <% end %>
    </div>
  <% end %>
</div>