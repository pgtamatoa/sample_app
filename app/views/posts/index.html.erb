<% provide(:title, "index") %> 

<h1>Articles</h1>

<div class="clearfix">
  <% if @posts.empty? %>
    <p>There aint no post.</p>
  <% else %>
    <div class="posts">
      <% @posts.each do |p| %>
        <div class="post"> 
          <h3><%= p.title %></h3>
          <p><%= p.content %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>